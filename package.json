{
  "name": "inferno-2d-shareware",
  "version": "1.0.0",
  "description": "A 2D Platformer Tribute to 90s Descent",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/ coverage/",
    "format": "prettier . --check",
    "lint": "eslint .",
    "check": "tsc --noEmit",
    "test": "jest --runInBand --coverage --verbose",
    "all": "npm-run-all clean format lint check test --print-label",
    "coverage": "./scripts/chrome.mjs coverage/lcov-report/index.html",
    "watch": "webpack --watch",
    "serve": "webpack-dev-server",
    "start": "npm-run-all --parallel watch serve --print-label"
  },
  "author": "Nick Derevjanik",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@geckos.io/phaser-on-nodejs": "1.2.9",
    "@jest/globals": "29.7.0",
    "canvas": "2.11.2",
    "eslint": "9.21.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.6.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "npm-run-all": "4.1.5",
    "phaser3spectorjs": "0.0.8",
    "prettier": "3.5.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-mockito": "2.6.1",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.25.0",
    "webpack": "5.98.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.0"
  },
  "dependencies": {
    "phaser": "3.87.0"
  }
}
